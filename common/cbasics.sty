% ------------------------------
% Common symbols
% ------------------------------
\newcommand*{\eg}{\leavevmode\unskip , e. g., \ignorespaces}
\newcommand*{\ie}{\leavevmode\unskip, i. e., \ignorespaces}
\newcommand{\nil}{\varnothing}

% ------------------------------
% Common symbols
% ------------------------------
\newcommand{\bold}[1]{\textbf{#1}}     % Bold
\newcommand{\ital}[1]{\textit{#1}}     % Italic
\newcommand{\undl}[1]{\underline{#1}}  % Underline

\newcommand{\scap}[1]{\textsc{#1}}  % Small caps
\newcommand{\slnt}[1]{\textsl{#1}}  % Slanted text
\newcommand{\ttxt}[1]{\texttt{#1}}  % Monospace (typewriter)
